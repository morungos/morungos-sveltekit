{
	"name": "morungos-sveltekit",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@fontsource-variable/lora": "^5.2.6",
		"@fontsource-variable/open-sans": "^5.2.6",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/enhanced-img": "^0.7.0",
		"@sveltejs/kit": "^2.23.12",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/markdown-it-attrs": "^4.1.3",
		"@types/markdown-it-footnote": "^3.0.4",
		"@types/node": "^24.1.0",
		"@types/showdown": "^2.0.6",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"gray-matter": "^4.0.3",
		"magic-string": "^0.30.17",
		"markdown-it-anchor": "^9.2.0",
		"markdown-it-attrs": "^4.3.1",
		"markdown-it-footnote": "^4.0.0",
		"markdown-to-txt": "github:ejrbuss/markdown-to-txt",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"remark-abbr": "^1.4.2",
		"remark-github": "^12.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-svelte-md": "link:../vite-plugin-svelte-md",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"purecss": "^3.0.0"
	}
}
